                android:layout_height="150dp"
                android:layout_weight="1"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/snack4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginTop="412dp"
