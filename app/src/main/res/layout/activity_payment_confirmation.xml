<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment_confirmation"
    android:background="@drawable/main">


    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Payment"
        android:textColor="#F6F1F1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/line2" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirmation"
        android:textColor="#FBFBFB"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView42"
        app:layout_constraintVertical_bias="0.275">

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="95dp"
            android:layout_height="113dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="90dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/right" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="230dp"
            android:text="Successful"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="300dp"
            android:text="Your Order Number is  #45678 you will recive order confirmation email shortly"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="440dp"
            android:text="Thank You For Join With Us"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnContinou"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Continue Ordering"
            android:layout_marginStart="80dp"
            android:backgroundTint="@color/Brunette"
            android:layout_marginTop="500dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/Nude"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/naveHome"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/cartIcon1"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/shopping_cart" />

            <ImageView
                android:id="@+id/Menuicon1"
                android:layout_width="50dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/list" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>